{
  "manifest_version": 3,
  "name": "Netflix â†’ Discord Presence",
  "version": "1.0.0",
  "description": "Tampilkan apa yang sedang kamu tonton di Netflix ke Discord Rich Presence.",
  "permissions": ["tabs", "scripting"],
  "host_permissions": ["*://*.netflix.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": { "service_worker": "background.js" }
}
